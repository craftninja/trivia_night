<!DOCTYPE html>
<html>
<head>
  <title>TriviaNight</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse" role="navigation">
    <div class="navbar-header">
      <%= link_to 'Trivia Night!', root_path, class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <div class="navbar-right">
        <% if current_user %>
          <p class="navbar-text">Welcome to Trivia Night, <%= current_user.username %></p>
          <%= link_to 'Log out', login_path(current_user), :method => :delete, class: "btn btn-default navbar-btn" %>
        <% else %>
          <%= link_to 'Log in', new_login_path , class: "btn btn-default navbar-btn" %>
          <%= link_to 'Sign up', new_user_path , class: "btn btn-default navbar-btn" %>
        <% end %>
      </div>
    </div>
  </nav>
  <% if flash %>
    <% flash.each do |name, msg| %>
      <% flash_class = "alert alert-danger" if name == "error" %>
      <%= content_tag :div, msg, class: flash_class %>
    <% end %>
  <% end %>

  <%= yield %>

</body>
</html>
