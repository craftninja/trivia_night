<!DOCTYPE html>
<html>
<head>
  <title>TriviaNight</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse" role="navigation">
    <div class="navbar-header">
      <%= link_to 'Trivia Night!', root_path, class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <div class="navbar-right">
        <% if current_user %>
          <p class="navbar-text">Welcome to Trivia Night, <%= current_user.username %></p>
        <% else %>
          <%= link_to 'Sign up', new_user_path , class: "btn btn-default navbar-btn" %>
        <% end %>
      </div>
    </div>
  </nav>
  <%= yield %>

</body>
</html>
